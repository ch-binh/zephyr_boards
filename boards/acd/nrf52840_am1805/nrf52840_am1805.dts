/dts-v1/;
#include <nordic/nrf52840_qiaa.dtsi>
#include "nrf52840_am1805-pinctrl.dtsi"

/ {
	model = "Custom Board auto generated by nRF Connect for VS Code";
	compatible = "acd,nrf52840-am1805";


	chosen {
		zephyr,sram = &sram0;
		zephyr,flash = &flash0;
		zephyr,code-partition = &slot0_partition;
		zephyr,console =  &uart0 ;
		zephyr,shell-uart =  &uart0 ;
		zephyr,uart-mcumgr = &uart0;
	};

	leds {
		compatible = "gpio-leds";
		led0: led_0 {
			label = "Green LED 0";
			gpios = <&gpio0 13 GPIO_ACTIVE_LOW>;
		};
		led1: led_1 {
			label = "Green LED 1";
			gpios = <&gpio0 14 GPIO_ACTIVE_LOW>;
		};
		led2: led_2 {
			label = "Green LED 2";
			gpios = <&gpio0 15 GPIO_ACTIVE_LOW>;
		};
		led3: led_3 {
			label = "Green LED 3";
			gpios = <&gpio0 16 GPIO_ACTIVE_LOW>;
		};
	};



	buttons {
		compatible = "gpio-keys";
		button0: button_0 {
			gpios = <&gpio0 11 (GPIO_ACTIVE_LOW | GPIO_PULL_UP)>;
			label = "Push Button switch 0";
		};
		button1: button_1 {
			gpios = <&gpio0 12 (GPIO_ACTIVE_LOW | GPIO_PULL_UP)>;
			label = "Push Button switch 1";
		};
		button2: button_2 {
			gpios = <&gpio0 24 (GPIO_ACTIVE_LOW | GPIO_PULL_UP)>;
			label = "Push Button switch 2";
		};
		button3: button_3 {
			gpios = <&gpio0 25 (GPIO_ACTIVE_LOW | GPIO_PULL_UP)>;
			label = "Push Button switch 3";
		};
	};

	/* These aliases are provided for compatibility with samples */
	aliases {
		i2c1 = &i2c1;
		uart0 = &uart0;
		gpio0 = &gpio0;
		gpio1 = &gpio1;


		led0 = &led0;
		led1 = &led1;
		led2 = &led2;
		led3 = &led3;
		sw0 = &button0;
		sw1 = &button1;
		sw2 = &button2;
		sw3 = &button3;
		bootloader-led0 = &led0;
		mcuboot-button0 = &button0;
		mcuboot-led0 = &led0;
		watchdog0 = &wdt0;
	};
};

&gpio0 {
	status = "okay";
};

&gpio1 {
	status = "okay";
};

// enable this to use gpio
&gpiote {
	status = "okay";
};

&i2c1 {
	status = "okay";
	compatible = "nordic,nrf-twim";
	// #address-cells = <1>;
	// #size-cells = <0>;
	pinctrl-0 = <&i2c1_default>;
	pinctrl-1 = <&i2c1_sleep>;
	pinctrl-names = "default", "sleep";
	clock-frequency = <I2C_BITRATE_FAST>;
	am1805: am1805@69 {
		compatible = "ambiq,am1805";
		label = "AM1805";
		reg = <0x69>;
	};
};


&uart0 {
	status = "okay";
	current-speed = <115200>;
	pinctrl-0 = <&uart0_default>;
	pinctrl-1 = <&uart0_sleep>;
	pinctrl-names = "default", "sleep";
};


&power {
	status = "okay";
};

&acl {
	status = "okay";
};


&flash0 {
	partitions {
		compatible = "fixed-partitions";
		#address-cells = <1>;
		#size-cells = <1>;

		boot_partition: partition@0 {
			label = "mcuboot";
			reg = <0x0 0xc000>;
		};
		slot0_partition: partition@c000 {
			label = "image-0";
			reg = <0xc000 0x72000>;
		};
		slot1_partition: partition@7e000 {
			label = "image-1";
			reg = <0x7e000 0x72000>;
		};
		scratch_partition: partition@f0000 {
			label = "image-scratch";
			reg = <0xf0000 0xa000>;
		};
		storage_partition: partition@fa000 {
			label = "storage";
			reg = <0xfa000 0x6000>;
		};
	};
};
